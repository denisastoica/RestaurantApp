<Page x:Class="Restaurant.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Restaurant.Controls"
      Title="Bine ai venit la Restaurant"
      Width="950" Height="600"
      Background="White">

    <Page.Resources>
        <Color x:Key="BackgroundColor">#FFF5E1</Color>
        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#504746"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#B89685"/>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="38"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PanelBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Margin" Value="0,5,0,4"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="44"/>
        </Style>
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PanelBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="44"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="175"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="387*"/>
            <ColumnDefinition Width="266*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PanelBrush}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="RestaurantApp"
                           FontSize="44"
                           Foreground="White"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Bine ai venit!"
                           Foreground="White"
                           FontSize="26"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Padding="45" Background="White" Grid.ColumnSpan="2" Grid.Column="1">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="440">
                <TextBlock Text="Autentificare" Style="{StaticResource HeaderText}" Margin="0,0,0,0"/>
                <TextBlock Text="Te autentifici ca:" FontWeight="Bold" FontSize="18" Margin="0,20,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Content="Client"
                                 GroupName="UserType"
                                 FontSize="17"
                                 IsChecked="{Binding IsClientMode}" 
                                 Margin="0,0,25,0"/>
                    <RadioButton Content="Angajat"
                                 GroupName="UserType"
                                 FontSize="17"
                                 IsChecked="{Binding IsEmployeeMode}"/>
                </StackPanel>

                <Label Content="Email:"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="Parolă:"/>
                <PasswordBox Style="{StaticResource PasswordBoxStyle}"
                             controls:PasswordBoxHelper.BindPassword="True"
                             controls:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button Content="Login"
                            Command="{Binding LoginCommand}"/>
                    <Button Content="Înregistrează-te"
                            Command="{Binding RegisterCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEmployeeMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <Button Content="Continuă ca oaspete"
                        Command="{Binding GuestCommand}"
                        Background="Transparent"
                        Foreground="{StaticResource PanelBrush}"
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="1"
                        Width="220"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
