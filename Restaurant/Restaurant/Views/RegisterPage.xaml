<Page x:Class="Restaurant.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Înregistrare Client">

    <Page.Resources>
        <Color x:Key="PanelColor">#616161</Color>
        <Color x:Key="BackgroundColor">#FFF0E5F0</Color>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BackgroundColor}"/>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Creare cont client"
               FontSize="24" FontWeight="Bold"
               Foreground="{StaticResource PanelBrush}"
               Margin="0,0,0,20"
               HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Width="300" HorizontalAlignment="Center">
            <Label Content="Nume:"/>
            <TextBox Style="{StaticResource TextBoxStyle}"
               Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Prenume:"/>
            <TextBox Style="{StaticResource TextBoxStyle}"
               Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Email:"/>
            <TextBox Style="{StaticResource TextBoxStyle}"
               Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Telefon:"/>
            <TextBox Style="{StaticResource TextBoxStyle}"
               Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Adresă livrare:"/>
            <TextBox Style="{StaticResource TextBoxStyle}"
               Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Parolă:"/>
            <PasswordBox x:Name="PwdBox"
                   Style="{StaticResource PasswordBoxStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Înregistrează-te"
              Command="{Binding RegisterCommand}"
              Width="140"/>
            <Button Content="Anulează"
              Command="{Binding CancelCommand}"
              Background="Transparent"
              Foreground="{StaticResource PanelBrush}"
              BorderBrush="Transparent"
              Width="100"/>
        </StackPanel>
    </Grid>
</Page>

