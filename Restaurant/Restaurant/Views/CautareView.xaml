<Page x:Class="Restaurant.Views.CautareView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:Restaurant.ViewModels"
      xmlns:services="clr-namespace:Restaurant.Services"
      Title="Căutare"
      x:Name="CautarePage">

    <Page.Resources>
        <services:BoolToIndexConverter x:Key="BoolToIndexConverter"/>
        <services:ImagePathToImageSourceConverter x:Key="ImagePathToImageSourceConverter"/>
        <Style TargetType="TextBlock" x:Key="CategoryHeader">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#836FFF"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Căutare preparate sau meniuri:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox Width="160" Margin="0,0,10,0" Text="{Binding CuvantCheie, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Width="120" Margin="0,0,10,0" Text="{Binding AlergenCheie, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Width="120" Margin="0,0,10,0"
                          SelectedIndex="{Binding TipFiltruContine, Converter={StaticResource BoolToIndexConverter}}">
                    <ComboBoxItem>Conține</ComboBoxItem>
                    <ComboBoxItem>Nu conține</ComboBoxItem>
                </ComboBox>
                <Button Content="Caută" Width="90" Command="{Binding SearchCommand}"/>
            </StackPanel>

            <ItemsControl ItemsSource="{Binding GroupedResults}" Margin="0,20,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding CategoryName}" Style="{StaticResource CategoryHeader}"/>
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" Margin="0,8,0,0" Padding="8" Background="#FFF8EE">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="70" Height="70" Margin="0,0,14,0" Source="{Binding PhotoUrl, Converter={StaticResource ImagePathToImageSourceConverter}}" Stretch="UniformToFill"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                                    <TextBlock Text="{Binding PortionSize}" FontStyle="Italic"/>
                                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:F2} lei'}"/>
                                                    <TextBlock Text="{Binding AllergensText}" Foreground="OrangeRed"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>
